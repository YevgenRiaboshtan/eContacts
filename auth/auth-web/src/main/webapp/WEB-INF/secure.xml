<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                 http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
                 http://www.springframework.org/schema/security 
                 http://www.springframework.org/schema/security/spring-security-3.2.xsd">

 
	<http auto-config="false" create-session="always">
		<!-- <intercept-url pattern="/share/*" access="ROLE_USER,ROLE_ADMIN,ROLE_ANONYMOUS" /> -->
		<intercept-url pattern="/user/*" access="ROLE_USER"  />
		<intercept-url pattern="/admin/*" access="ROLE_ADMIN" />
		<access-denied-handler error-page="/index.xhtml?accessDenied=true"/>
		<form-login login-page="/index.xhtml" default-target-url="/index.xhtml" 
			authentication-failure-url="/index.xhtml?error=true"  login-processing-url="/j_spring_security_check"/>
		<anonymous enabled="false" granted-authority="ROLE_ANONYMOUS"/>
		<logout invalidate-session="true" delete-cookies="true" logout-success-url="/index.xhtml" logout-url="/j_spring_security_logout" />
	</http>
	<authentication-manager>
		<authentication-provider ref="dataBaseAuthenticationProvider"></authentication-provider>
	</authentication-manager>	
	<beans:bean name="dataBaseAuthenticationProvider" class="org.auth.authWeb.app.security.DataBaseAuthenticationProvider">
	</beans:bean>
</beans:beans>  
