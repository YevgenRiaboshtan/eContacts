<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
			http://www.springframework.org/schema/security
			http://www.springframework.org/schema/security/spring-security-3.2.xsd
			http://www.springframework.org/schema/context 
			http://www.springframework.org/schema/context/spring-context.xsd">
 
	<security:http auto-config="false" create-session="always">
		<security:intercept-url pattern="/user/*" access="ROLE_USER"  />
		<security:intercept-url pattern="/admin/*" access="ROLE_ADMIN" />
		<security:intercept-url pattern="/quick_start/*" access="ROLE_SUPER_ADMIN"/>
		<security:intercept-url pattern="/disabledUser.xhtml" access="ROLE_DISABLED_USER"/>
		<security:form-login login-page="/index.xhtml" 
			default-target-url="/index.xhtml" 
			authentication-failure-handler-ref="failureAuthHandler"
			authentication-success-handler-ref="successAuthHandler"
			login-processing-url="/j_spring_security_check"/>
		<security:anonymous enabled="false" granted-authority="ROLE_ANONYMOUS"/>
		<security:logout invalidate-session="true" delete-cookies="true" logout-success-url="/index.xhtml" logout-url="/j_spring_security_logout" />
	</security:http>
	
	<context:annotation-config />
	
	<security:authentication-manager>
		<security:authentication-provider ref="dataBaseAuthenticationProvider">
		</security:authentication-provider>		
	</security:authentication-manager>
	
	<bean id="successAuthHandler" class="com.econtact.authWeb.app.security.SuccessAuthenticatedHandler"/>
	<bean id="failureAuthHandler" class="com.econtact.authWeb.app.security.FailureAuthenticatedHandler"/>
	<bean id="dataBaseAuthenticationProvider" class="com.econtact.authWeb.app.security.DataBaseAuthenticationProvider"/>
</beans>  
